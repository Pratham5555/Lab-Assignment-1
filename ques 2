#include<iostream>
using namespace std;
int main()
{
    int n;
    cout<<"enter no. of elements you want to insert in your array: ";
    cin>>n;
    int arr[n];
    cout<<"enter elements of the array: ";
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    cout<<"the elements you entered are: ";
    for(int i=0;i<n;i++)
    {
        cout<<arr[i]<<" ";
    }
    cout<<endl;
    int sum=0;
    int avg=0;
    for(int i=0;i<n;i++)
    {
        sum+=arr[i];
    }
    avg=sum/n;
    cout<<"the avg of elements is: "<<avg;
}
